= content_for :javascript do
  = javascript_include_tag 'highcharts', 'highcharts/modules/data', 'highcharts/modules/drilldown', 'highcharts/modules/exporting', 'dashboard'

%h3
  Dashboard

.row
  .col-lg-2.col-sm-4
    .panel.widget.bg-primary
      .row.row-table
        .col-xs-12.text-center.pv-lg
          .h2.mt0
            = @zones.length
          .text-uppercase
            Zonas
  .col-lg-2.col-sm-4
    .panel.widget.bg-primary
      .row.row-table
        .col-xs-12.text-center.pv-lg
          .h2.mt0
            = @sections.length
          .text-uppercase
            Secciones
  .col-lg-2.col-sm-4
    .panel.widget.bg-primary
      .row.row-table
        .col-xs-12.text-center.pv-lg
          .h2.mt0
            = @squares.length
          .text-uppercase
            Manzanas
  .col-lg-2.col-sm-4
    .panel.widget.bg-primary
      .row.row-table
        .col-xs-12.text-center.pv-lg
          .h2.mt0
            = @voters.length
          .text-uppercase
            Personas
  .col-lg-2.col-sm-4
    .panel.widget.bg-primary
      .row.row-table
        .col-xs-12.text-center.pv-lg
          .h2.mt0
            = Voter.coordinators_count
          .text-uppercase
            Coordinadores
  .col-lg-2.col-sm-4
    .panel.widget.bg-primary
      .row.row-table
        .col-xs-12.text-center.pv-lg
          .h2.mt0
            = Voter.sympathizers_count
          .text-uppercase
            Simpatizantes

.row
  .col-lg-12
    .panel.panel-default
      .panel-body
        .col-sm-11
          #chart-container