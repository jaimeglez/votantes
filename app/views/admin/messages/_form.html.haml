.panel.panel-default
  .panel-heading
    %b
      Nuevo mensaje
  .panel-body
    = simple_form_for [:admin, @message], html: {multipart: true, class:  'form-horizontal' }, validate: true do |f|
      .col-xs-12
        .col-xs-5
          = f.input :msg_type, input_html: { maxlength: 100 }, label: 'Tipo', required: true

        .col-xs-12
          .col-xs-5
            = f.input :content_text, label: 'Contenido', required: true
        .col-xs-12
          .col-xs-5
            = f.input :content_video, as: :file, label: 'Contenido(video max 10 Mb)', required: true

      .col-xs-12
        .col-xs-12.text-right
          = f.button :submit, 'Guardar', class: ['btn', 'btn-success']

.col-xs-12.text-right.bottom
  = link_to 'Lista de mensajes', :back, class: 'btn btn-default'

