.panel.panel-default
  .panel-body
    = simple_form_for :promoter, url: admin_promoters_path, html: {class:  'form-horizontal' }, validate: true do |f|
      .col-lg-6
        = f.input :square_id, as: :select, collection: @squares, label: 'Manzana', label_method: :with_parents_name, value_method: :id, include_blank: false, required: true, input_html: {data: {tool: 'select2'}}
        = f.input :voter_id, as: :select, collection: @promoters, label: 'Persona', label_method: :full_name, value_method: :id, include_blank: false, required: true, input_html: {data: {tool: 'select2'}}
        .form-group
          = f.button :submit, 'Guardar', class: 'btn btn-success'