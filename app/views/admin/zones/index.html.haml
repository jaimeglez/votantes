.well.well-lg
  .row
    .col-xs-12
      %h4.text-muted
        Buscar zona
  = simple_form_for :search, { url: admin_zones_path, method: :get, defaults: {required: false} } do |f|
    .row
      .col-xs-4
        = f.input :name, label: 'Nombre de zona'
    .btn-group
      =link_to 'Crear zona', new_admin_zone_path, class: 'btn btn-success'
      = f.button :submit, value: 'Buscar', class: 'btn btn-default'

.col-xs-12
  %h1
    Lista de zonas

  -unless @zones.empty?
    %table.table.table-hover
      %thead
        %tr
          %th Id
          %th Nombre
          %th Coordinador

      -@zones.each_with_index do |zone,index|
        %tr
          %td=zone.id
          %td=zone.name
          %td=zone.voter ? zone.voter.full_name : 'No asignado'
          %td
            = link_to 'Agregar secci√≥n', new_admin_section_path(zone_id: zone.id)
            |
            = link_to 'Secciones', admin_sections_path(zone_id: zone.id)
            |
            = link_to 'Ver', admin_zone_path(zone.id)
            |
            = link_to 'Editar', edit_admin_zone_path(zone.id)
            |
            = link_to 'Borrar', admin_zone_path(zone.id), method: :delete, data: { confirm: 'Desea eliminar la zona?' }

    = paginate @zones
  -else
    %h4
      No hay zonas registradas
