<p><%= t(:hello).capitalize %> <%= @resource.email %>!</p>

<p><%= t '.request_reset_link_msg' %></p>

<%- if @resource.class.name == 'Admin' %>
  <p><%= link_to t('.password_change_link'), edit_password_url(@resource, reset_password_token: @token).html_safe %></p>
<%- else %>
  <p><%= link_to t('.password_change_link'), voter_passwords_edit_url(voter: @resource, reset_password_token: @token, config: message['client-config'].to_s, redirect_url: message['redirect-url'].to_s).html_safe %></p>
<%- end %>

<p><%= t '.ignore_mail_msg' %></p>
<p><%= t '.no_changes_msg' %></p>
