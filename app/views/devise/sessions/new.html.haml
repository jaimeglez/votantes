.block-center.mt-xl.wd-xl
  .panel.panel-dark.panel-flat
    .panel-heading.text-center
      Administrador
    .panel-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, label: 'Correo', required: false, autofocus: true
          = f.input :password, label: 'Contrase√±a', required: false
          = f.input :remember_me, as: :boolean, label: 'Recordar' if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, "Ingresar"
