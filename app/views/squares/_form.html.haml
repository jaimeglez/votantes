.panel.panel-default
  .panel-heading
    %b
      Manzana
  .panel-body
    = simple_form_for @square, html: {multipart: true, class:  'form-horizontal' }, validate: true do |f|
      .col-xs-12
        .col-xs-5
          = f.input :zone_id, as: :select, label: 'Zona', required: true, collection: @zones
      .col-xs-12
        .col-xs-5
          = f.input :section_id, as: :select, label: 'Secci√≥n', required: true, collection: @sections
      .col-xs-12
        .col-xs-5
          = f.input :name, input_html: { maxlength: 100 }, label: 'Nombre', required: true

      .col-xs-12
        .col-xs-12.text-right
          = f.button :submit, 'Guardar', class: ['btn', 'btn-success']

.col-xs-12.text-right.bottom
  = link_to 'Lista de manzanas', :back, class: 'btn btn-default'

