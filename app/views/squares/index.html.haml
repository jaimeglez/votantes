.well.well-lg
  .row
    .col-xs-12
      %h4.text-muted
        Buscar manzana
  = simple_form_for :search, { url: squares_path, method: :get, defaults: {required: false} } do |f|
    .row
      .col-xs-4
        = f.input :name, label: 'Nombre de manzana'
    .btn-group
      =link_to 'Crear manzana', new_square_path, class: 'btn btn-success'
      = f.button :submit, value: 'Buscar', class: 'btn btn-default'

.col-xs-12
  %h1
    Lista de manzanas

  -unless @squares.empty?
    %table.table.table-hover
      %thead
        %tr
          %th Id
          %th Nombre
          %th Zona
          %th Secci√≥n

      -@squares.each_with_index do |square,index|
        %tr
          %td=square.id
          %td=square.name
          %td=square.zone.name
          %td=square.section.name
          %td
            = link_to 'Ver', square_path(square.id)
            |
            = link_to 'Editar', edit_square_path(square.id)
            |
            = link_to 'Borrar', square_path(square.id), method: :delete, data: { confirm: 'Desea eliminar la manzana?' }

  -else
    %h4
      No hay manzanas registradas
